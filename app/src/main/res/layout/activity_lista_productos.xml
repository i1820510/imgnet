<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lista_productos">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:padding="3dp"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="#C39BD3"
            android:gravity="center">


            <LinearLayout
                android:padding="3dp"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="#C39BD3"
                android:gravity="center"
                android:textAlignment="center">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mis productos    "
                    android:textSize="20dp"
                    android:textColor="#F2F2F2"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <ListView
                android:id="@+id/lista_productos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ListView>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="-80dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btn_tipo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#FFE1A9"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:text="Parrillas"
                android:textSize="8dp" />
            <Button
                android:id="@+id/btn_tipo2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#FFE1A9"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:text="Bebidas"
                android:state_pressed="true"
                android:state_focused="true"
                android:color="#ff0000ff"
                android:textSize="8dp" />

          </LinearLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>